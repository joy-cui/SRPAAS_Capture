        android:layout_width="1px"
        android:layout_height="1px" />

    <org.suirui.srpass.render.GLFrameSurface
        android:id="@+id/glrender_surface"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <org.suirui.srpass.render.GLFrameSurface
        android:id="@+id/glrender_surface2"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <org.suirui.srpass.render.GLFrameSurface
        android:id="@+id/glrender_surface3"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <org.suirui.srpass.render.GLFrameSurface
        android:id="@+id/glrender_surface4"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>